<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/baking_app_widget_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#09C"
    android:orientation="vertical"
    android:padding="@dimen/widget_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/recipeWidgetLabelTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="8dp"
            android:background="#09C"
            android:contentDescription="@string/recipe"
            android:text="@string/recipe"
            android:textColor="#ffffff"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/recipeWidgetValueTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="8dp"
            android:background="#09C"
            android:text="@string/na"
            android:textColor="#ffffff"
            android:textStyle="italic" />

    </LinearLayout>

    <ListView
        android:id="@+id/ingredients_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/empty_ingredient_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/ingredientsWidgetLabelTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="8dp"
            android:background="#09C"
            android:text="@string/ingredients"
            android:textColor="#ffffff"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/ingredientsWidgetValueTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="8dp"
            android:background="#09C"
            android:text="@string/na"
            android:textColor="#ffffff"
            android:textStyle="italic" />
    </LinearLayout>

</LinearLayout>